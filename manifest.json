{
  "manifest_version": 2,
  "name": "coMeNo",
  "version": "0.7",

  "applications": {
     "gecko": {
       "id": "coMeNo@coMeNo.com",
         "strict_min_version": "55.0"
     }
   },
   
    "options_ui" : {
    "page": "coMeNoOptions.html",
    "open_in_tab": false
  },

  "permissions": [
    "contextMenus", "storage", "clipboardWrite", "notifications", "*://zalgo.io/*"
  ],
  
  "content_scripts": [
      {
        "matches": ["*://*/*" , "file://*/*"],
        "js": ["coMeNoCs.js"]
      }
  ],
  
  "background": {
    "scripts": ["coMeNo.js"]
  }
}
